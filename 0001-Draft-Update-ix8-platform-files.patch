+int32_t pow_convert(int32_t *a, int32_t b)
+{
+	/* function input parameter (a * 10 ^ b) */
+	int32_t i = 0, r = 1, temp_b = 0;
+
+	temp_b = (b > 0) ? b : -b;
+
+	for (i = 0; i < temp_b; i++) r = r * 10;
+
+	if (b > 0)
+	{
+		*a = (*a) * r;
+		r = 1;
+	}
+	/* function return parameter calc_result = *a, decimal_point = r */
+	return r;
+}
