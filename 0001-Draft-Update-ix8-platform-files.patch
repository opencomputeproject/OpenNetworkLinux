+		aim_free(tempstr);
+		info->hdr.id = id;
+		info->status = ONLP_FAN_STATUS_PRESENT;
+	}
+
+	/* get id input */
+	err = onlp_file_read_int(&info->rpm, SYS_HWMON_PREFIX "/fan%d_input", tid);
