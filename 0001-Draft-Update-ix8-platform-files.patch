+	for (i = 0; i < SENSOR_ATTR_MAX; i++)
+	{
+		if ((g_sensor_data[attr_no].capability >> i) & 0x01)
+		{
+			snprintf(attrdata->attr_name[j], SENSOR_ATTR_NAME_LENGTH, sensor_attrnames[i], attrdata->attr_type_str, attr_no - DEBUGUSE_SHIFT);
