+
+	dev_dbg(&client->dev, "port_id %d => cpld_port %d, group %d(%d)\n", data->port_id,
+				data->cpld_port + 1, group + 1, group_port + 1);
+
+	value = i2c_smbus_read_word_data(client, get_group_cmd(group));
+	if (value < 0)
