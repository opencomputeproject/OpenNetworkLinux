+		}
+	}
+
+	/* get id label */
+	strlen = onlp_file_read_str(&tempstr, SYS_HWMON_PREFIX "/fan%d_label", tid);
+	if (strlen <= ONLP_STATUS_OK)
+	{
+		info->status = ONLP_FAN_STATUS_FAILED;
+		printf("Error[%d] : read [%d] label fail\n", err, tid);
+		return err;
+	}
+	else
